json.projects do
  json.array! @projects.compact do |project|
    json.id project.id
    json.name project.name
    json.description project.description
    json.url project_path(project)
    json.edit_path edit_project_path(project)
    json.delete_path project_path(project)
  end
end

json.pagination do
  json.prevPage @pagy ? pagy_prev_url(@pagy) : nil
  json.nextPage @pagy ? pagy_next_url(@pagy) : nil
end

json.newProjectPath new_project_path

json.createProjectModal do
  json.greeting "Hello From the Modal"
end